#include <iostream>
using namespace std;

int main() {
    const double PI = 3.14159; // Constant value for Pi
    double radius, area;

    // Input radius from user
    cout << "Enter the radius of the circle: ";
    cin >> radius;

    // Calculate the area
    area = PI * radius * radius;

    // Display the result
    cout << "The area of the circle is: " << area << endl;

    return 0;
}
